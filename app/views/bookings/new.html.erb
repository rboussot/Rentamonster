<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class= "col-sm-offset-3 col-sm-6">

<div class="marge"></div>

<% if @monster.photo? %>
  <%= cl_image_tag @monster.photo.path, width: 200, height: 300, crop: :fill %>
<% end %>

<h1><%= @monster.name %></h1>
<p><%= @monster.species %></p>

<%= simple_form_for([@monster, @booking]) do |b| %>
  <%= b.input :start_date %>
  <%= b.input :end_date %>
  <%= b.button :submit %>
<% end %>

<p><%= @booking.price %></p>

<%= link_to "Cancel", monster_path(@monster) %>

      </div>
    </div>
  </div>
</div>
