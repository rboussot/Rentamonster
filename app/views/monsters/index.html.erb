<div class="container">
  <div class="row">

    <% @monster.each do |m| %>
    <div class="col-md-4 col-sm-4 col-xs-12 ">
    <div class="monster-card" >

     <ul>
        <li> <h1> <%= m.name %> </h1> </li>
        <li> <h3> <%= m.title %> </h3> </li>
          <div >
            <% if m.photo? %>
              <%= cl_image_tag m.photo.path, width: 200, height: 300, crop: :fill %>
           <% end %>
          </div>
        <li class= "card-link"><%= link_to "More info", monster_path(m.id)%></li>
      </ul>
    </div>
    </div>
    <% end %>
  </div>
</div>
