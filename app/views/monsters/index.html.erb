<div class="container">
  <div class="row">
          <% @monster.each do |m| %>
            <div class="col-md-4 col-xs-12 ">
              <div class="monster-card">
                 <ul>
                    <li> <h2> <%= m.name %> </h2> </li>
                    <li> <h3> <%= m.title %> </h3> </li>
                    <li> <h4> <%= m.description %></h4> </li>
                    <li><%= link_to "More info", monster_path(m.id), class:'btn-danger'%></li>
                 </ul>
              </div>
            </div>
          <% end %>
  </div>
</div>
