<div class="container">
  <div class="row">

    <% @monster.each do |m| %>
    <div class="col-md-4 col-sm-6 col-xs-12">
    <div class="monster-card" >

     <ul>
        <li> <h1> <%= m.name %> </h1> </li>
        <li> <h3> <%= m.title %> </h3> </li>
        <div >
          <%= link_to monster_path(m.id) do %>
            <%= cl_image_tag m.photo.path, width: 330, height: 260, crop: :fill %>
          <% end %>
        </div>
      </ul>
    </div>
    </div>
    <% end %>
  </div>
</div>
